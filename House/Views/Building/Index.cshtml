@model IEnumerable<House.Models.Building.BuildingListItem>

@{
    int queueNumber = 0;
}

<div class="h1">
    Building
</div>

<div class="">
    <a asp-action="add" asp-controller="building" type="submit" class="btn btn-primary">Add</a>
</div>
<form method="post" class="m-1">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Street</th>
                <th scope="col">ApartmentNumber</th>
                <th scope="col">Floor</th>
                <th scope="col">Typeofheating</th>
                <th scope="col">Area</th>
                <th scope="col">Parking</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var building in Model)
            {
                queueNumber += 1;

                <tr>
                    <th scope="row">@queueNumber</th>
                    <td class="">@building.Street</td>
                    <td class="">@building.ApartmentNumber</td>
                    <td class="">@building.Floor</td>
                    <td class="">@building.Typeofheating</td>
                    <td class="">@building.Area</td>
                    <td class="">@building.Parking</td>
                    <td class="">
                        <a asp-action="edit" asp-controller="building" asp-route-id="@building.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="building" asp-route-id="@building.Id" type="submit" class="btn btn-danger" value="Delete">
                    </td>
                </tr>
            }
        </tbody>

    </table>
</form>
