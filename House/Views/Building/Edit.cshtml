@model House.Models.Building.BuildingViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Add</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAT" type="hidden" />
        <input asp-for="ModifiedAT" type="hidden" />

        <div class="form-group row">
            <label asp-for="Street" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Street" class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="ApartmentNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ApartmentNumber" class="form-control" />
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Floor" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Floor" class="form-control" />
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Typeofheating" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Typeofheating" class="form-control" />
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Area" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Area" class="form-control" />
            </div>
        </div>

         <div class="form-group row">
            <label asp-for="Parking" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Parking" class="form-control" />
            </div>
        </div>

       
        @if (Model.Id.HasValue)
        {
            <input asp-action="edit" asp-controller="building" type="submit" class="btn btn-primary" value="Update">
            <input asp-action="delete" asp-controller="building" asp-for="Id" type="submit" class="btn btn-danger" value="Delete">
        }
        else
        {
            <input asp-action="add" asp-controller="building" type="submit" class="btn btn-primary" value="Add">
        }
        <a asp-action="index" class="btn btn-primary">Index</a>

    </form>
</div>

